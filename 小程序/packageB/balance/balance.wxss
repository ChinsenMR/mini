.balance .header {
  height: 245rpx;
  background-color: #ea5955;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.balance .header-title {
  font-size: 35rpx;
  color: #fff;
}
.balance .header-price {
  display: flex;
  align-items: center;
}
.balance .header-price text {
  font-size: 68rpx;
  color: #fff;
}
.balance .header-price text:last-child {
  font-size: 30rpx;
  color: #DC6965;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.balance .content {
  box-sizing: border-box;
  padding: 0 30rpx;
}
.balance .content-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
  margin-top: 20rpx;
}
.balance .content-list-img1 {
  width: 47rpx;
  height: 47rpx;
  margin-right: 20rpx;
}
.balance .content-list text {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}
.balance .content-list-img2 {
  width: 13rpx;
  height: 26rpx;
}
.real_name_wrap {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.real_name_wrap .real_name {
  width: 610rpx;
  height: 320rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.real_name_wrap .real_name-title {
  font-size: 32rpx;
  color: #000000;
  font-weight: 600;
  text-align: center;
  padding: 30rpx 0;
}
.real_name_wrap .real_name-texts {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}
.real_name_wrap .real_name-texts text {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 10rpx;
}
.real_name_wrap .real_name-btn {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}
.real_name_wrap .real_name-btn text {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #333333;
}
.real_name_wrap .real_name-btn text:last-child {
  color: var(--theme-red);
}
