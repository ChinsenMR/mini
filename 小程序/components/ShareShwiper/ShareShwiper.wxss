/* components/ShareShwiper/ShareShwiper.wxss */

.Sharebox {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.containt {
  height: 891rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

swiper-item {
  display: flex;
  justify-content: space-between;
  width: 534rpx !important;
  height: 890rpx !important;
  border-radius: 6rpx !important;
  padding: 10rpx 0 20rpx 62rpx;
}

swiper-item>image {
  width: 534rpx;
  height: 100%;
}

.bot {
  height: 292rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx 6rpx 0px 0px;
  display: flex;
  margin-top: 59rpx;
}

.botl, .botr {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bimg {
  width: 117rpx;
  height: 117rpx;
}
