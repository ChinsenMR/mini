/* modal */
.cModal {
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 10000;
}

.close {
  transform: rotate(45deg);
  border: 2rpx solid #666666;
  border-radius: 50%;
  height: 35rpx;
  width: 35rpx;
  text-align: center;
  color: #666666;
  font-size: 30rpx;
  position: absolute;
  top: 22rpx;
  right: 27rpx;
  padding-bottom: 8rpx;
  box-sizing: border-box;
}

.content {
  transition: all .5s ;
  position: absolute;
  bottom: -100%;
  left: 0;
  right: 0;
  background-color: #fff;
  height: 776rpx;
  border-radius: 6rpx 6rpx 0 0;
}
.show-content{
  transition: all .5s ;
  bottom: 0;
}
