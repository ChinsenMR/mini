@import "../../app.wxss";

.layout{
  background: rgba(0,0,0,0.5);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 10000;
}

.content{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  height: 776rpx;
  border-radius: 6rpx 6rpx 0 0;
  padding: 30rpx;
}

.goodsInfo{
  position: relative;
  /* margin-bottom: 20rpx; */
}

.goodsInfo .goodsImg{
  width: 164rpx;
  height: 164rpx;
  margin-right: 20rpx;
}

.goodsInfo-right{
  flex: 1;
  margin-right: 65rpx;
}

.close{
  transform: rotate(45deg);
  border: 2rpx solid #666666;
  border-radius: 50%;
  height: 35rpx;
  width: 35rpx;
  text-align: center;
  color: #666666;
  font-size: 30rpx;
  position:absolute;
  top: 0rpx;
  right: 0rpx;
  box-sizing: border-box;
  padding-bottom: 8rpx;
}

.title{
  color: #333333;
  font-size: 28rpx;
}

.goodsPrice{
  color: var(--theme-red);
  font-size: 38rpx;
  padding: 10rpx 0;
}

.member{
  color: #D99A03;
  font-size: 26rpx;
}

.member text{
  margin-right: 15rpx;
}

.select-ul{
  margin-top: 10rpx;
}

.select-ul .select-title{
  color: #333333;
  font-size: 30rpx;
  margin: 30rpx 0;
  text-align: left;
}

.select-inner > view{
  width: 160rpx;
  height: 58rpx;
  border-radius: 6rpx;
  background-color: #EEEEEE;
  color: #666;
  text-align: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.select-inner text {
  flex: 1;
  text-align: center;
}

.select-inner image{
  width: 45rpx;
  margin-left: 7rpx;
}

.goodsNum{
  margin-top: 43rpx;
}

.goodsNum view:first-child{
  color: #333333;
  font-size: 30rpx;
}

.goodsNum-l text:last-child{
  font-size: 22rpx;
  color: #666;
  margin-left: 25rpx;
}

.reduce, .add, .num{
  color: #E5E5E5;
  font-size: 30rpx;
  border: 2rpx solid #E5E5E5;
  height: 35rpx;
  width: 35rpx;
  border-radius: 50%;
}

.num{
  width: 65rpx;
  margin: 0 20rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
  color: #000000;
}

.btn{
  position: absolute;
  bottom: 58rpx;
  color: #fff;
  font-size: 30rpx;
  left: 30rpx;
  right: 30rpx;
}

.btn text{
  width: 47%;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
}

.btn text:first-child{
  background:linear-gradient(88deg,rgba(255,51,51,0.94),rgba(255,66,66,0.94));
}

.btn text:last-child{
  background:linear-gradient(0deg,rgba(255,204,153,0.94),rgba(224,169,110,0.94));
}

.select-inner .activeSelect{
  background-color: rgba(255,68,68,0.1);
  color: var(--theme-red);
  border: 2rpx solid var(--theme-red);
}

.selected-txt{
  color: #333333;
  font-size: 26rpx;
}