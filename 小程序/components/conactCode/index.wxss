
.dialog {
  position: fixed;
  width: 100%;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: 11;
}
.dialog .filter {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 1);
  opacity: 0.57;
}
.dialog .container {
  position: absolute;
  top: 0;
  left: 0;
  width: 538rpx;
  height: 700rpx;
  left: 50%;
  margin-left: -269rpx;
  top: 50%;
  margin-top: -350rpx;
  /* background-color: #fff; */
}
.dialog .container .code {
  width: 300rpx;
  height: 300rpx;
  margin-left: 119rpx;
  margin-top: 90rpx;
}
.dialog .container .title {
  margin-top: 74rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.dialog .container .wechat {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.dialog .container .wechat .copy {
  margin-left: 12rpx;
  width: 80rpx;
  height: 35rpx;
  line-height: 28rpx;
  border: 1px solid rgba(255, 68, 68, 1);
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  padding: 0;
  font-weight: 400;
  color: rgba(255, 68, 68, 1);
}

.dialog .container .close {
  margin: auto;
  margin-top: 182rpx;
  display: block;
  width: 62rpx;
  height: 62rpx;
  /* background-color: #fff; */
}
