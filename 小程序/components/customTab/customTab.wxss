@import "../../app.wxss";

/* 购物车 */

.tab2{
  background:linear-gradient(88deg,rgba(255,51,51,0.94),rgba(255,70,70,0.94));
  border-radius: 49rpx;
  padding: 0 40rpx;
}

.tab2-home image{
  width: 50rpx;
}

.tab2-home text{
  color: #fff;
  font-size: 24rpx;
  margin-top: 5rpx;
}

.tab2-activity image{
  width: 100rpx;
  margin-left: 30rpx;
}

.tab2-cart{
  height:98rpx;
  background:linear-gradient(85deg,rgba(112,112,112,1) 0%,rgba(153,153,153,1) 100%);
  border-radius:49rpx;
  margin: 0 20rpx;
  padding: 0 30rpx 0 15rpx;
  color: #fff;
  font-size: 28rpx;
}

.tab2-cart image{
  width: 60rpx;
  margin-right: 15rpx;
}

.tab2-me image{
  width: 45rpx;
}

.tab2-me text{
  color: #fff;
  font-size: 24rpx;
  margin-top: 5rpx;
}

.tab2-cartIcon{
  position: relative;
}

.gListTotal{
  position: absolute;
  top: -2rpx;
  right: 10rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: #FF9966;
  font-size: 24rpx;
  color: #fff;
}

.cartBg{
  background:linear-gradient(0deg,rgba(255,204,153,0.94),rgba(224,169,110,0.94));
}