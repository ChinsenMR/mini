@import "../../app.wxss";

.layout{
  background: rgba(0,0,0,0.5);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 10000;
}

.close{
  transform: rotate(45deg);
  border: 2rpx solid #666666;
  border-radius: 50%;
  height: 35rpx;
  width: 35rpx;
  text-align: center;
  color: #666666;
  font-size: 30rpx;
  position:absolute;
  top: 22rpx;
  right: 27rpx;
  box-sizing: border-box;
  padding-bottom: 9rpx;
}

.content{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  height: 896rpx;
  border-radius:6rpx 6rpx 0 0;
}

.header{
  height: 88rpx;
  color: #333;
  font-size: 38rpx;
}

.content-li{
  padding: 0 27rpx;
  margin-bottom: 60rpx;
}

.content-li image{
  width: 30rpx;
  margin-top: 4rpx;
  margin-right: 15rpx;
}

.content-li text:first-child{
  color: #333;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.content-li text:last-child{
  color: #999;
  font-size: 24rpx;
}

.btn{
  margin: 0 27rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: var(--theme-red);
  color: #fff;
  border-radius: 44rpx; 
}