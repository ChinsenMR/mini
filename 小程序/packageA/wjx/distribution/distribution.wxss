.layout {
  position: relative;
  background-color: #F4F4F4;
  height: 100%;
}

.navBar {
  height: 88rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
  color: #666;
  font-size: 28rpx;
  /* padding-left: 28rpx; */
  box-sizing: border-box;
  padding: 0 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.navBar text {
  line-height: 88rpx;
  /* margin-right: 100rpx; */
  position: relative;
}

.navBar text.active {
  color: #FD4851;
}

.active::after {
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 4rpx;
  background-color: #FD4851;
}

.content-ul {
  padding-bottom: 50rpx;
  margin-top: 100rpx;
  box-sizing: border-box;
}

.content-li {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.order-inner {
  color: #999999;
  font-size: 21rpx;
  padding: 30rpx 28rpx 50rpx 28rpx;
  border-bottom: 1rpx solid #F4F4F4;
}

.order-inner view {
  margin-bottom: 8rpx;
}

.order-code text:last-child {
  color: #FF3333;
}

.order-price text:last-child {
  color: #FF3333;
}

.employ-price view:last-child {
  margin-left: 15rpx;
}

.employ-price text:last-child {
  color: #FF9900;
}

.goodsInfo {
  background-color: #fff;
  padding: 28rpx;
  border-bottom: 1rpx solid #F4F4F4;
}

.goodsInfo image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}

.goods-title text:first-child {
  color: #333333;
  font-size: 26rpx;
  width: 388rpx;
}

.goods-title text:last-child {
  color: #666666;
  font-size: 24rpx;
}

.goodsInfo-inner view:last-child {
  color: #999999;
  font-size: 20rpx;
  margin-top: 8rpx;
}

.goodsPrice {
  color: #666666;
  font-size: 26rpx;
  height: 80rpx;
  padding-right: 28rpx;
}

.goodsPrice text:last-child {
  margin-left: 30rpx;
}

.emity {
  left: 0;
  right: 0;
  position: absolute;
  top: 40%;
  font-size: 35rpx;
  text-align: center;
}

.Delivery_wrap {
  z-index: 11000;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}

.Delivery {
  padding: 35rpx 10rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgb(243, 243, 243);
  text-align: center;
  font-size: 35rpx;
}

.zezhao {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  z-index: 10;
  position: fixed;
  top: 0;
  left: 0;
}

.showEdit_wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 11;
  background-color: #fff;
  padding: 20rpx 0 60rpx 0;
}

.showEdit {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.showEdit .flex {
  flex: 1;
}

.show_btn {
  width: 80%;
  background-color: var(--theme-red);
  color: #fff;
  font-size: 25rpx;
  border-radius: 50rpx;
  padding: 28rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
}

.showEdit .flex input {
  width: 100%;
  border-bottom: 1px solid rgb(241, 241, 241);
}

.showEdit .name {
  width: 20%;
  margin-right: 10rpx;
}

.paddNot {
  padding: 0 10rpx;
}

.editSub {
  width: 70%;
  margin: 20rpx 15%;
}

.fahuo {
  position: relative;
}

.fahuo .send .send_btn {
  position: absolute;
  top: 10rpx;
  left: 30rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: #1989fa;
  width: 120rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}