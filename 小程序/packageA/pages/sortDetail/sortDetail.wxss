.layout {
  background-color: #f4f4f4;
}

.navBar {
  background-color: var(--theme-red);
  color: #fff;
  font-size: 30rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  white-space: nowrap;
  display: flex;
  align-items: center;
}

.test {
  display: inline-block;
  flex: 2;
  margin-right: 25rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 70rpx;
}

.navBar .active {
  position: relative; 
  color: #FFCC99;
}

.navBar .active::after{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  content: '';
  height: 4rpx;
  background-color: #FFCC99;
}

.g-ul {
  padding: 20rpx 10rpx 20rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.g-li {
  margin: 0 20rpx 20rpx 0;
  padding: 12rpx;
  box-sizing: border-box;
  width: 334rpx;
  box-shadow: 0 8rpx 23rpx 1rpx rgba(153, 153, 153, 0.1);
  border-radius: 8rpx;
  background-color: #fff;
}

.g-img {
  width: 310rpx;
  height: 310rpx;
  border-radius: 8rpx 8rpx 0 0;
}

.g-title {
  color: #333;
  font-size: 28rpx;
  margin: 5rpx 0;
  width: 100%;
  height: 64rpx;
  line-height: 32rpx;
}

.g-pbox {
  width: 100%;
}

.pMark {
  color: #FF3333;
  font-size: 24rpx;
  margin-bottom: -8rpx;
}

.curPrice {
  color: #FF3333;
  font-size: 36rpx;
  margin: 0 3rpx;
}

.newTip {
  border-radius: 12rpx 12rpx 12rpx 2rpx;
  background: linear-gradient(var(--theme-red), #FF3366);
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 10rpx;
}

.prePrice {
  color: #999;
  font-size: 20rpx;
  text-decoration: line-through;
  margin-top: 5rpx;
}

.g-add {
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
  padding-bottom: 10rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 46rpx;
  background-color: #E3B27D;
}

.empty {
  width: 100%;
  margin-top: 100rpx;
  color: #999;
  font-size: 30rpx;
}

.empty image {
  width: 450rpx;
  height: auto;
  margin-bottom: 30rpx;
}