/* packageA/pages/Directsuperiors/Directsuperiors.wxss */
page{
  background: rgba(255, 255, 255, 1);
}
#super {
  font-size: 30rpx;
  background: rgba(255, 255, 255, 1);
}

.contentop {
  height: 99rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid gainsboro;
  padding: 27rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333333;
}

.contentop > image {
  width: 130rpx;
  height: 130rpx;
  background: red;
  margin-right: 17rpx;
  border-radius: 50%;
}

.item {
  padding: 30rpx;
  font-size: 30rpx;
  color: #333;
  margin-left: 10rpx;
  border-bottom: 2rpx solid #f5f5f5
}
.item .item-name{
  color: #999;
  width: 180rpx;
}
.item .avatar{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
}
.item .qr-code{ 
  width:300rpx;
  height:300rpx;
}

.person {
  padding-left: 10rpx;
}

.emity {
  position: relative;
  text-align: center;
  top: 40%;
}
.text_info {
  margin-top: 10rpx;
  width: 100%;
  height: 300rpx;
  color: #666;
  margin-left: 10rpx;
}
