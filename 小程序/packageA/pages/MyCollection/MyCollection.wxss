/* packageA/pages/MyCollection/MyCollection.wxss */

.colect {
	padding: 22rpx;
	background: rgba(255, 255, 255, 1);
	box-sizing: border-box;
	margin-top: 19rpx;
}

.containt {
	display: flex;
	border-bottom: 1px solid gainsboro;
	margin-bottom: 21rpx;
	padding: 20rpx;
}

.containt > image {
	width: 164rpx;
	height: 164rpx;
}

.contr {
	padding-left: 16rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.name {
	width: 414rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.people {
	font-weight: 500;
	color: rgba(102, 102, 102, 1);
	font-size: 26rpx;
}

.redue {
	width: 260rpx;
	min-width: 194rpx;
	background: rgba(255, 204, 204, 1);
	color: rgba(255, 51, 51, 1);
	font-size: 24rpx;
	text-align: center;
	border-radius: 3rpx;
}

.pricebox {
	display: flex;
	justify-content: space-between;
}

.price {
	font-size: 28rpx;
	font-weight: 800;
	color: rgba(255, 68, 68, 1);
}
.emity {
	position: relative;
	font-size: 30rpx;
	text-align: center;
	top: 40%;
}
.active {
	color: red;
	font-size: 26rpx;
}
.handle-box {
	width: 100%;
	padding-left: 30rpx;
}

.van-nav-bar {
	padding-top: 0 !important;
}
