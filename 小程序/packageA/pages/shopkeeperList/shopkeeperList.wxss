  background:rgba(0,0,0,.8);
}
.shareWin{
  width: 100%;
  height: 100%;
  z-index: 10;
  position: fixed;
  top:0;
  left:0;
  background:rgba(0,0,0,.8);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share_bnt_wrap{
  z-index: 1500 !important;
  margin-top: 30rpx;
