}
.share_left image{
  width: 117rpx;
  height: 117rpx;
}
.share_right{
  flex:1;
}
.share_right image{
  width: 117rpx;
  height: 117rpx;
}

/* 按钮样式 */
.left_wrap{
  position: relative;
}
.share_left_btn{
  width: 100%;
