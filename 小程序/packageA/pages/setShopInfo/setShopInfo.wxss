.setinfo {
  background-color: #f5f5f5;
  position: relative;
}

.logo_wrap {
  display: flex;
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  background-color: #fff;
}

.logo_img_wrap {
  flex: 2;
  padding: 15prx 0;
}

.logo_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
}

.logo_center {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}

.logo_btn {
  color: #fff;
  width: 50%;
  padding: 5rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #ff0000;
  border-radius: 30rpx;
  margin: 15rpx 0 50rpx 0;
  font-size: 25rpx;
  position: relative;
}

.reupdate {
  position: absolute;
  top: 0;
  left: 32rpx;
  opacity: 0;
}

.logo_text {
  font-size: 25rpx;
}

.shop_title {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx 15rpx 10rpx;
  border-bottom: 1rpx solid #c6c7c8;
}

.shop_all_title {
  color: #838384;
  font-size: 30rpx;
  margin-top: 25rpx;
}

.format_text {
  margin-top: 20rpx;
  color: #c6c7c8;
  font-size: 25rpx;
}

.shop_bag {
  background-color: #fff;
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #c6c7c8;
}

.shop_bg_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 300rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
  background-color: #f1f5f8;
}

.shop_bg_img_add {
  width: 70rpx;
  height: 70rpx;
}

.wx_img {
  padding: 0 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #c6c7c8;
}

.wx_img_wrap {
  margin: 17rpx 0 17rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 150rpx;
  border-radius: 5rpx;
  background-color: #f1f5f8;
}

.wx_bg_img_add {
  width: 50rpx;
  height: 50rpx;
}

.share_img {
  padding: 0 20rpx 20rpx 15rpx;
  background-color: #fff;
}

.share_img_wrap {
  margin: 17rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 280rpx;
  border-radius: 5rpx;
  background-color: #f1f5f8;
}

.share_bg_img {
  width: 75rpx;
  height: 75rpx;
}

.shopInfo_wrap {
  margin-top: 15rpx;
  background-color: #fff;
}

.shopInfo_name {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.shopInfo_all_title {
  flex: 2.5;
  font-size: 30rpx;
  color: #131313;
}

.shopInfo_all_input {
  flex: 5;
  font-size: 25rpx;
  color: #131313;
}

.shop_site_wrap {
  margin-top: 15rpx;
  height: 80rpx;
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.save_wrap {
  width: 100%;
  position: absolute;
  left: 10%;
  bottom: -12%;
  margin-bottom: 50rpx;
}

.save_btn {
  width: 80%;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: red;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.save_btns {
  position: absolute;
  left: 10%;
  bottom: -12%;
  width: 80%;
  height: 80rpx;
  opacity: 0;
}


.shop_big_img .wx_big_img {
  width: 100%;
  height: 100rpx;
}
