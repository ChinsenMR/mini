/* pages/withdraw/withdraw.wxss */

.top {
  position: relative;
  margin-top: 20rpx;
  padding: 34rpx 16rpx;
  padding-left: 60rpx;
  width: 100%;
  font-size: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eaeaea;
  color: #666;
  background-color: #fff;
}
.top text {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #e8a318;
}

.content {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  box-sizing: border-box;
  color: #4a4a4a;
  background-color: #fff;
}
.content-left {
  display: flex;
  align-items: center;
}
.content-left image {
  margin-right: 20rpx;
  width: 82rpx;
  height: 82rpx;
}

.active {
  border-radius: 6rpx;
  border: 2rpx solid #e0001b !important;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.tixian {
  padding: 30rpx 48rpx 0;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
}

.tixian .tixianFont {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #4a4a4a;
}

.tixian-center {
  padding: 30rpx 0;
  display: flex;
  border-bottom: 2rpx solid #eaeaea;
}
.tixian-center__left {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 56rpx;
  color: #4a4a4a;
}
.tixian-center__left input {
  font-size: 56rpx;
  color: #4a4a4a;
  height: 78rpx;

}
.tixian-center__right {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.tixian-center__right image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}
.tixian-center__right text {
  font-size: 30rpx;
  color: #fbb11b;
}
.info {
  padding: 26rpx 0;
  font-size: 26rpx;
  color: #9b9b9b;
}

.btn {
  margin: 70rpx auto;
  padding: 30rpx 0;
  width: 90%;
  font-size: 32rpx;
  text-align: center;
  border-radius: 100rpx;
  color: #fff;
  background: linear-gradient(
    90deg,
    rgba(249, 115, 114, 1) 0%,
    rgba(240, 92, 101, 1) 100%
  );
}

.dialog {
  position: fixed;
  width: 100%;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: 11;
}
.dialog .filter {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 1);
  opacity: 0.57;
}
.dialog .container {
  position: absolute;
  top: 0;
  left: 0;
  width: 538rpx;
  height: 700rpx;
  left: 50%;
  margin-left: -269rpx;
  top: 50%;
  margin-top: -350rpx;
  /* background-color: #fff; */
}
.dialog .container .code {
  width: 300rpx;
  height: 300rpx;
  margin-left: 119rpx;
  margin-top: 90rpx;
}
.dialog .container .title {
  margin-top: 74rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.dialog .container .wechat {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.dialog .container .wechat .copy {
  margin-left: 12rpx;
  width: 80rpx;
  height: 35rpx;
  line-height: 28rpx;
  border: 1px solid rgba(255, 68, 68, 1);
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  padding: 0;
  font-weight: 400;
  color: rgba(255, 68, 68, 1);
}

.dialog .container .close {
  margin: auto;
  margin-top: 182rpx;
  display: block;
  width: 62rpx;
  height: 62rpx;
  /* background-color: #fff; */
}

.dialog .password {
  width: 379rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(196, 196, 196, 1);
  margin: 40rpx auto;
  margin-top: 100rpx;
  border: 1px solid #999;
  padding: 15rpx;
  text-align: center;
}
.dialog .sub-btn {
  width: 414rpx;
  height: 90rpx;
  background: rgba(255, 68, 68, 1);
  border-radius: 44rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 90rpx;
}
