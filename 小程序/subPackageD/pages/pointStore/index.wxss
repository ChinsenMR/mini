.goods-wrap {
  padding: 30rpx;
}

.goods-wrap .item {
  float: left;
  width: 335rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.goods-wrap .item:nth-child(even) {
  margin-right: 0;
}

.goods-wrap .item .content {
  padding: 20rpx;
  padding-bottom: 24rpx;
}

.goods-wrap .item .cover {
  width: 100%;
  height: 335rpx;
}

.goods-wrap .item .title {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  height: 70rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-wrap .item .price {
  margin-top: 20rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}

.goods-wrap .item .integral {
  flex: 1;
  color: var(--theme-red);
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.goods-wrap .item .integral .bold {
  font-size: 36rpx;
}

.goods-wrap .item .get {
  width: 96rpx;
  padding: 0;
  height: 41rpx;
  line-height: 41rpx;
  background: #ff4444;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.more {
  width: 750rpx;
}

.float-btn {
  position: fixed;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  z-index: 11;
  text-align: center;
  border-radius: 40rpx 0 0 40rpx;
  top: 60rpx;
  font-size: 32rpx;
  color: var(--theme-red);
  background-color: #fff;
  right: 0;
  box-shadow: 0 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}
