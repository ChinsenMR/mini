/* pages/addBank/addBank.wxss */
.add-bank {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #F9F9F9;
}
.bank-list {
  background-color: #fff;
}
.bank-list__item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  margin: 0 30rpx;
  color: #6E6E6E;
  border-bottom: 2rpx solid #EAEAEA;
}
.bank-list__item text {
  font-size: 28rpx;
  width: 120rpx;
}
.bank-list__item input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 50rpx;
}
.bank-list__item .verify-btn{
  padding: 0;
  width: 140rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #F26168;
  background-color: transparent;
}
.add-bank .btn {
  margin: 150rpx auto 0;
  width: 94%;
  border-radius: 666rpx;
  font-weight: normal;
  color: #999999;
  background-color: #EEEEEE;
}
.add-bank .active {
  color: #fff;
  background:linear-gradient(270deg,rgba(240,91,100,1) 0%,rgba(252,124,119,1) 100%);
}