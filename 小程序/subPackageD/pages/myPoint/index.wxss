/* packageA/pages/Myintegral/Myintegral.wxss */

.intetop {
  height: 340rpx;
  background-image: url("http://hmqy.oss-cn-hangzhou.aliyuncs.com/hmeshop_jxy/images/bg_jifen@2x.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: relative;
  margin-bottom: 20rpx;
}

.kon {
  height: 39rpx;
}

.now {
  /* margin-top: 39rpx; */
  text-align: center;
  font-size: 30rpx;
  color: white;
}

.money {
  text-align: center;
  font-size: 72rpx;
  color: white;
}

.money text {
  font-size: 30rpx;
}

.dd {
  position: absolute;
  display: flex;
  justify-content: space-around;
  align-items: center;
  left: 0;
  right: 0;
  bottom: 10rpx;
}

.atcttit {
  position: relative;
  border-bottom: 1px solid red;
  color: red;
}

.detail {
  height: 121rpx;
  background: white;
  border-bottom: 1rpx solid gainsboro;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.qian {
  font-size: 28rpx;
}

.date {
  font-size: 22rpx;
  color: rgba(197, 195, 195, 1);
}

.der {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(255, 96, 103, 1);
}

.emity {
  text-align: center;
  font-size: 30rpx;
  margin-top: 50%;
}


.container {
  margin-bottom: 30rpx;
}

.no-data {
  margin-bottom: 122rpx;
  color: #999;
  text-align: center;
  font-size: 28rpx;
}
.goods-wrap {
  padding: 30rpx;
}

.goods-wrap .item {
  float: left;
  width: 335rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.goods-wrap .item:nth-child(even) {
  margin-right: 0;
}

.goods-wrap .item .content {
  padding: 20rpx;
  padding-bottom: 24rpx;
}

.goods-wrap .item .cover {
  width: 100%;
  height: 335rpx;
}

.goods-wrap .item .title {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  height: 70rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-wrap .item .price {
  margin-top: 20rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}

.goods-wrap .item .integral {
  flex: 1;
  color: var(--theme-red);
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.goods-wrap .item .integral .bold {
  font-size: 36rpx;
}

.goods-wrap .item .get {
  width: 96rpx;
  padding: 0;
  height: 41rpx;
  line-height: 41rpx;
  background: var(--theme-red);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.more {
  width: 750rpx;
}

.float-btn,
.float-btn-2 {
  position: fixed;
  width: 200rpx;

  z-index: 11;
  text-align: center;
  border-radius: 13rpx 0 0 13rpx;

  top: 200rpx;
  font-size: 27rpx;
  color: var(--theme-red);
  background-color: #fff;
  right: 0;
  box-shadow: 0 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  word-break: break-all;
  line-height: 70rpx;

}
.float-btn .btn-item:nth-child(1) {
  /* border-bottom: 2rpx solid var(--theme-red); */
}
.float-btn-2 {
  top: 150rpx;
}
