.layout {
  position: relative;
  background-color: #f4f4f4;
  height: 100%;
}

.navBar {
  height: 88rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
  color: #666;
  font-size: 28rpx;
  /* padding-left: 28rpx; */
  box-sizing: border-box;
  padding: 0 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 9;
}

.navBar text {
  line-height: 88rpx;
  /* margin-right: 100rpx; */
  position: relative;
}

.navBar text.active {
  color: #fd4851;
}

.active::after {
  position: absolute;
  content: "";
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 4rpx;
  background-color: #fd4851;
}

.apply-btn {
  width: 120rpx;
}

.content-ul {
  padding-bottom: 50rpx;
  margin-top: 100rpx;
  box-sizing: border-box;
}

.content-li {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.order-inner {
  color: #999999;
  font-size: 26rpx;
  padding: 30rpx 28rpx 50rpx 28rpx;
  border-bottom: 1rpx solid #f4f4f4;
}

.order-inner view {
  margin-bottom: 15rpx;
}

.order-code text:last-child {
  color: #ff3333;
}

.order-price text:last-child {
  color: #ff3333;
}

.employ-price view:last-child {
  margin-left: 15rpx;
}

.employ-price text:last-child {
  color: #ff9900;
}

.goodsInfo {
  background-color: #fff;
  padding: 28rpx;
  border-bottom: 1rpx solid #f4f4f4;
}

.goodsInfo image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}

.goodsInfo .image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}

.goods-title {
  position: relative;
}

.nums_wrap {
  position: absolute;
  top: 2rpx;
  right: 2rpx;
  display: flex;
  flex-direction: column;
}

.nums_wrap>text {
  font-size: 22rpx;
  color: #666;
}

.buy_nums {
  font-size: 22rpx;
  color: #666;
}

.goods-title>.line2 {
  color: #333333;
  font-size: 26rpx;
  width: 65%;
}

.goodsInfo-inner .sku-text {
  color: #999999;
  font-size: 20rpx;
  margin-top: 8rpx;
}

.goodsInfo-inner .apply-btn {
  color: #999999;
  font-size: 20rpx;
  margin-top: 8rpx;
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #1989fa;
  border-radius: 10rpx;
}

.goodsPrice {
  color: #666666;
  font-size: 26rpx;
  height: 80rpx;
  padding-right: 28rpx;
}

.goodsPrice text:last-child {
  margin-left: 30rpx;
}

.emity {
  left: 0;
  right: 0;
  position: absolute;
  top: 40%;
  font-size: 35rpx;
  text-align: center;
}

.Delivery_wrap {
  z-index: 11000;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}

.Delivery {
  padding: 35rpx 10rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgb(243, 243, 243);
  text-align: center;
  font-size: 35rpx;
}

.filter {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  z-index: 10;
  position: fixed;
  top: 0;
  left: 0;
}

.showEdit_wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 11;
  background-color: #fff;
  padding: 20rpx 0 60rpx 0;
}

.showEdit {
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f1f1f1;

}

.showEdit image {
  width: 30rpx;
  height: 30rpx;
}

.showEdit .flex {
  flex: 1;
}

.show_btn {
  width: 80%;
  background-color: var(--theme-red);
  color: #fff;
  font-size: 25rpx;
  border-radius: 50rpx;
  padding: 28rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
}

.showEdit .flex input {
  width: 100%;
  /* border-bottom: 1px solid rgb(241, 241, 241); */
}

.showEdit .name {
  width: 20%;
  margin-right: 10rpx;
}

.paddNot {
  padding: 0 10rpx;
}

.editSub {
  width: 70%;
  margin: 20rpx 15%;
}

.send-goods {
  position: relative;
  padding-left: 30rpx;
}

.send-goods .send {
  border-bottom: 1px solid rgb(241, 241, 241);
  padding: 30rpx 0;
}

.send-goods .send .send_btn,
.send-goods .send .send_apply {

  font-size: 20rpx;
  color: #fff;
  background-color: #1989fa;
  width: 120rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.apply-ing {
  border: 2rpx solid #1989fa;
  background: #1989fa !important;
  color: #fff !important;
}