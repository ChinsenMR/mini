/* pages/verificationBankMsg/verificationBankMsg.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.box{
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  width: 100%;
  height: 100%;
  overflow: auto;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.userMsgBox {
  width: 100%;
}
.userTip {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  padding: 10rpx 0rpx;
}
.bg{
  background: #EBEEF5;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
.userMsg {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}
.userMsg image{
  width: 50rpx;
  height: 50rpx;
}
.userMsg input{
  font-size: 26rpx;
  flex: 1;
  margin-left: 20rpx;
}
.cardImg {
  width: 50rpx;
  height: 50rpx;
  background: yellow;

}
.cardMsgBox {
  background: #EBEEF5;
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx 30rpx;
  display: flex;
  border-radius: 10rpx;
  align-items: center;
}
.cardName{
  padding: 5rpx 0rpx;
  color: #666;
  font-size: 28rpx;

}
.cardNumber{
  padding: 5rpx 0rpx;
  color: #666;
  font-size: 26rpx;
}
.cardMsg{
  flex: 1;
  margin-left: 30rpx;
}
.userAgreementBox {
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.userAgreementBtn {
  width: 20rpx;
  height: 20rpx;
}
.userAgreementTip {
  font-size: 24rpx; 
  color: #999;
  margin-left: 10rpx;
}
.userAgreementTip text{
  font-size: 24rpx; 
  color: #409EFF;
  margin-left: 10rpx;
}
.userAgreementImg{
  border-radius: 50%;
  border: 1px solid #909399;
  width: 25rpx;
  height: 25rpx;
}
.userAgreementImg2{
  border-radius: 50%;
  /* border: 1px solid #909399; */
  width: 30rpx;
  height: 30rpx;
}
.agreeAndSureBox{
  width: 100%;
  padding: 10rpx 0rpx;
  text-align: center;
  background: #909399;
  color: #FFFF;
  border-radius: 50rpx;
  margin-top: 50rpx;
  font-size: 30rpx;
  transition: all .03s;
}
.showColor{
  background: #409EFF;
  color: #FFFF;
}