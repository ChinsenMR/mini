/* pages/moduleHome/moduleHomeLess.less.wxss */
.saleBox {
  padding: 35rpx 25rpx 0;
}
.saleBox .saleTitle {
  display: flex;
}
.saleBox .saleTitle .titleName {
  font-size: 30rpx;
  color: #333333;
  font-weight: 800;
}
.saleBox .saleTitle .more {
  margin-left: 511rpx;
  font-size: 26rpx;
  color: #999999;
}
.saleBox .saleScrollBox {
  white-space: nowrap;
  margin-top: 20rpx;
}
.saleBox .saleScrollBox .saleDetail {
  height: 218rpx;
  display: inline-block;
  margin-right: 20rpx;
  border-radius: 5rpx;
}
.saleBox .saleScrollBox .saleDetail .coverImg {
  background: red;
  width: 252rpx;
  height: 150rpx;
}
.saleBox .saleScrollBox .saleDetail .coverImg image {
  width: 100%;
  height: 100%;
}
.saleBox .saleScrollBox .saleDetail .salePrice {
  display: flex;
  font-size: 22rpx;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #f33;
  background-color: #fff;
}
.saleBox .saleScrollBox .saleDetail .salePrice .brand_price_wrap {
  font-size: 20rpx;
}
.saleBox .saleScrollBox .saleDetail .salePrice .originalPrice {
  color: #666666;
  font-size: 16rpx;
  margin-left: 8rpx;
}
.saleBox .saleScrollBox .saleDetail .salePrice .noprice {
  color: #999;
  text-decoration: line-through;
}
.groupbox {
  padding: 35rpx 25rpx 0;
}
.groupbox .groupTitle {
  display: flex;
  justify-content: space-between;
}
.groupbox .groupTitle .titleName {
  font-size: 30rpx;
  color: #333333;
  font-weight: 800;
}
.groupbox .groupTitle .more {
  margin-left: 511rpx;
  font-size: 26rpx;
  color: #999999;
}
.groupbox .groupdetail {
  margin-top: 30rpx;
}
.groupbox .groupdetail .groupdetailbox {
  display: flex;
  box-sizing: border-box;
  height: 215rpx;
  margin-top: 21rpx;
  background: #ffffff;
  box-shadow: 0px 4rpx 3rpx 0px rgba(153, 153, 153, 0.05);
  border-radius: 10rpx 10rpx 10rpx 6rpx;
  border-bottom: 1rpx solid gainsboro;
}
.groupbox .groupdetail .groupdetailbox .groupimg {
  width: 187rpx;
  height: 187rpx;
  border-radius: 10rpx;
  background: skyblue;
}
.groupbox .groupdetail .groupdetailbox .groupimg image {
  width: 100%;
  height: 215rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR {
  display: inline-block;
  padding-top: 9rpx;
  padding-left: 12rpx;
  position: relative;
}
.groupbox .groupdetail .groupdetailbox .groupR .groupname {
  width: 472rpx;
  margin-right: 10rpx;
  color: #333333;
  font-size: 28rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .groupname .grouping {
  display: inline-block;
  padding: 1rpx;
  width: 80rpx;
  margin-right: 8rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: #ff3333;
  border-radius: 4rpx;
  text-align: center;
  font-size: 20rpx;
  color: #ffffff;
}
.groupbox .groupdetail .groupdetailbox .groupR .prosess {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .prosess .progessbox {
  display: flex;
  position: relative;
  width: 180rpx;
  height: 30rpx;
  background: #ff9999;
  border-radius: 12rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .prosess .progessbox .acrive {
  color: #ffffff;
  font-size: 18rpx;
  height: 30rpx;
  background: #f33;
  border-radius: 5rpx;
  text-align: center;
  line-height: 30rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .prosess .grouped {
  width: 120rpx;
  height: 30rpx;
  border: 1rpx solid #ff9999;
  border-radius: 5rpx;
  font-size: 18rpx;
  text-align: center;
  color: #ff3333;
  margin-left: 10rpx;
  line-height: 30rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .prosess .baoyou {
  width: 64rpx;
  height: 30rpx;
  border: 1px solid #ff9999;
  border-radius: 5rpx;
  color: #ff3333;
  font-size: 18rpx;
  text-align: center;
  margin-left: 10rpx;
  line-height: 30rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .pricebox {
  display: flex;
  align-items: flex-end;
  margin-top: 12rpx;
  justify-content: space-between;
}
.groupbox .groupdetail .groupdetailbox .groupR .pricebox .grouprice {
  position: absolute;
  left: 20rpx;
  bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FF3333;
  font-size: 25rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .pricebox .grouprice .grouppeople {
  display: inline-block;
  font-size: 18rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .pricebox .grouprice .ge_one1 {
  margin-left: 5rpx;
}
.groupbox .groupdetail .groupdetailbox .groupR .pricebox .grouprice .ge_one2 {
  font-size: 28rpx;
  font-weight: 600;
}
.groupbox .groupdetail .groupdetailbox .groupR .pricebox .grouprice .ge_one3,
.groupbox .groupdetail .groupdetailbox .groupR .pricebox .grouprice .ge_one4 {
  font-size: 20rpx;
  margin-left: 5rpx;
  color: #999999;
  text-decoration: line-through;
}
.groupbox .groupdetail .groupdetailbox .groupR .pricebox .gogroup {
  width: 158rpx;
  height: 44rpx;
  background: linear-gradient(86deg, #ff3333 0%, #ff6666 100%);
  border-radius: 22rpx 22rpx 22rpx 22rpx;
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  right: 10rpx;
  bottom: 25rpx;
}
.flashSale {
  padding: 28rpx;
  background: linear-gradient(260deg, #ff3333 0%, #ff3366 100%);
  border-radius: 6px;
}
.flashSale .flashSaleTitle {
  padding-left: 234rpx;
  height: 79rpx;
  display: flex;
  line-height: 29rpx;
  align-items: center;
}
.flashSale .flashSaleTitle .titleIcon {
  width: 25rpx;
  height: 24rpx;
}
.flashSale .flashSaleTitle .titleName {
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 29rpx;
  font-size: 30rpx;
  color: #fffefe;
}
.flashSale .flashSaleBox {
  width: 691rpx;
  height: 234rpx;
  margin-top: 10rpx;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  border-radius: 15rpx;
}
.flashSale .flashSaleBox .timeContent {
  position: absolute;
  display: flex;
  align-items: center;
  width: 257rpx;
  height: 41rpx;
  background: #aa2624;
  border-radius: 0px 0px 12rpx 12rpx;
  bottom: 26rpx;
  left: 22rpx;
}
.flashSale .flashSaleBox .timeContent .bingin {
  color: #ffffff;
  font-size: 21rpx;
  margin-left: 10rpx;
}
.flashSale .flashSaleBox .timeContent text {
  display: inline-block;
  width: 24rpx;
  font-size: 16rpx;
  height: 24rpx;
  margin-left: 10rpx;
  background: #ffffff;
  border-radius: 2rpx;
  text-align: center;
  line-height: 30rpx;
}
.flashSale .flashSaleBox image {
  margin-left: 18rpx;
  width: 25rpx;
  height: 25rpx;
}
.flashSale .flashSaleBox .timeContent text:nth-of-type(2),
.flashSale .flashSaleBox .timeContent text:nth-of-type(4) {
  width: 4rpx;
  height: 10rpx;
  font-size: 16rpx;
  line-height: 10rpx;
  text-align: center;
  font-weight: 500;
  background: #aa2624;
  color: #ffffff;
}
