.layout{
  background-color: #9CC6DF;
}

.header-bg{
  width: 100%;
}

.coupon-ul{
  padding-left: 40rpx;
  width: 100%;
}

.coupon-ul scroll-view{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.coupon-li{
  position: relative;
  display: inline-block;
  width: 211rpx;
  margin-right: 20rpx;
}

.coupon-li:last-of-type{
  margin-right: 80rpx;
}

.coupon-li image{
  width: 211rpx;
}

.coupon-inner{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  padding: 20rpx 42rpx;
}

.coupon-innerT{
  color: #FBC3B5;
  font-size: 15rpx;
  text-align: center;
  padding-top: 10rpx;
  letter-spacing: 5rpx;
}

.coupon-innerP{
  text-align: center;
  padding: 10rpx 0;
  color: #FF7854;
}

.coupon-innerP text:first-child{
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.coupon-innerP text:last-child{
  font-size: 73rpx;
  font-weight: bold;
  text-shadow:0px 4px 3px rgba(247,119,84,0.3);
}

.coupon-innerI{
  color: #858585;
  font-size: 22rpx;
  text-align: center;
}

.coupon-innerB{
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  bottom: 48rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.recommend{
  padding: 20rpx 36rpx 80rpx 36rpx;
  position: relative;
}

.must-buy{
  position: absolute;
  top: 250rpx;
  left: 0;
  right: 0;
}

.must-buy .goodsImg {
  padding-top: 50rpx;
}

.must-buy .goodsImg image:first-child{
  width: 330rpx;
  z-index: 10;
}

.must-buy .goodsImg image:last-child{
  width: 560rpx;
  margin-top: -130rpx;
}

.goods-info{
  padding: 0 110rpx;
  margin-top: 67rpx;
}

.goods-infoT{
  color: #565656;
  font-size: 28rpx;
  width: 250rpx;
}

.goods-infoL view:first-child{
  color: #555555;
  font-size: 22rpx;
}

.goods-infoL view:last-child {
  color: #FF553B;
}

.goods-infoL view:last-child text:first-child{
  font-size: 20rpx;
  margin-bottom: 10rpx;
  margin-right: 5rpx;
}

.goods-infoL view:last-child text:last-child{
  font-size: 45rpx;
}

.goods-infoR{
  position: relative;
}

.goods-infoR image{
  width: 212rpx;
}

.goods-infoR text{
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  right: 70rpx;
  top: 16rpx;
}

.goods-ul{
  position: absolute;
  top: 800rpx;
  left: 0;
  right: 0;
  bottom: 0;
}

.goods-li {
  position: relative;
  height: 600rpx;
  width: 100%;
  text-align: center;
  margin-top: 18rpx;
}

.goods-li image{
  width: 676rpx;
}

.goods-liT{
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
  padding-top: 29rpx;
}

.goods-liT image:first-child{
  width: 330rpx;
  height: 270rpx;
  z-index: 50;
}

.goods-liT image:last-child{
  width: 560rpx;
  margin-top: -130rpx;
}

.goods-liB{
  position: absolute;
  bottom: 15rpx;
  right: 0;
  left: 0;
  padding: 0 110rpx;
}

.goods-liB image{
  width: 212rpx;
}

.goods-liTitle{
  position: absolute;
  bottom: 100rpx;
  color: #565656;
  font-size: 28rpx;
  left: 120rpx;
  width: 250rpx;
}

.goods-liBR{
  position: relative;
}

.goods-liBR text{
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  right: 70rpx;
  top: 16rpx;
}

.goods-liBL view:first-child{
  color: #555555;
  font-size: 22rpx;
}

.goods-liBL view:last-child {
  color: #FF553B;
}

.goods-liBL view:last-child text:first-child{
  font-size: 20rpx;
  margin-bottom: 10rpx;
  margin-right: 5rpx;
}

.goods-liBL view:last-child text:last-child{
  font-size: 45rpx;
}