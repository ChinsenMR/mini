/* pages/VoucherCenter/VoucherCenter.wxss */

.Vouchertop {
     /* position: fixed; */
     height: 58rpx;
     padding-left: 24rpx;
     padding-right: 24rpx;
     background: white;
}

.scroll {
     position: fixed;
     white-space: nowrap;
}

.item {
     display: inline-block;
     margin-right: 68rpx;
     font-size: 28rpx;
}

.active {
     border-bottom: 1rpx solid #f33;
     color: rgba(255, 51, 51, 1);
     display: inline-block;
     margin-right: 68rpx;
     font-size: 28rpx;
     font-weight: 800;
}

.Voucherbox {
     padding: 0 18rpx;
     /* padding-top: 46rpx; */
     box-sizing: border-box;
}

.Voucherdetail {
     height: 148rpx;
     padding: 15rpx;
     display: flex;
     margin-top: 10rpx;
     justify-content: space-between;
     background-image: url(https://hmqy.oss-cn-hangzhou.aliyuncs.com/hmeshop_jxy/images/bg_coupon%402x.png);
     background-repeat: no-repeat;
     background-size: 100% 100%;
}

.vouchL {
     display: flex;
}

.name {
     font-size: 28rpx;
     color: rgba(51, 51, 51, 1);
     height: 27rpx;
     line-height: 27rpx;
}

.vouchimg {
     width: 142rpx;
     height: 145rpx;
     border-radius: 10rpx;
     background: skyblue;
}

.vouchM {
     display: flex;
     padding-left: 20rpx;
     flex-direction: column;
}

.prosessD {
     display: flex;
     margin-top: 24rpx;
}

.prosessbox {
     width: 146rpx;
     height: 20rpx;
     position: relative;
     background: rgba(255, 153, 153, 1);
     border-radius: 10rpx;
     line-height: 20rpx;
}

.prosessbox text {
     /* width: 146rpx; */
     height: 20rpx;
     display: inline-block;
     position: absolute;
     top: 0;
     left: 33%;
     font-size: 14rpx;
     color: rgba(255, 255, 255, 1);
     text-align: center;
     line-height: 20rpx;
     z-index: 2;
}

.prosessing {
     background: rgba(255, 51, 51, 1);
     position: absolute;
     height: 30rpx;
     border-radius: 15rpx;
     top: 0;
     z-index: 1;
     text-align: center;
     line-height: 30rpx;
     font-size: 24rpx;
     color: #fff;
}

.backway {
     width: 81rpx;
     height: 20rpx;
     border: 1rpx solid rgba(255, 153, 153, 1);
     border-radius: 10rpx;
     color: rgba(255, 51, 51, 1);
     font-size: 14rpx;
     text-align: center;
     line-height: 20rpx;
     margin-left: 10rpx;
}

.pricebox {
     display: flex;
     align-items: center;
     margin-top: 34rpx;
}

.price {
     height: 24rpx;
     color: rgba(255, 51, 51, 1);
     font-size: 18rpx;
     align-self: flex-end;
     line-height: 24rpx;
}

.price text {
     font-size: 28rpx;
}

.yuanjia {
     height: 16rpx;
     color: rgba(153, 153, 153, 1);
     font-size: 16rpx;
     margin-left: 10rpx;
     align-self: flex-end;
     line-height: 16rpx;
}

.yuanjia text {
     text-decoration: line-through;
}

.vouchR {
     width: 20%;
     display: flex;
     position: relative;
     flex-direction: column;
     align-items: center;
}

.ondoor {
     /* color: rgba(255, 51, 51, 1); */
     font-size: 40rpx;
     color: #333;
}

.ondoor text {
     font-size: 26rpx;
}

.lingqu {
     position: absolute;
     top: 0;
     right: 0;
     width: 94rpx;
     height: 100rpx;
}

.quan {
     color: rgba(255, 51, 51, 1);
     font-size: 26rpx;
}

.now {
     width: 150rpx;
     height: 44rpx;
     /* background: linear-gradient(86deg, rgba(255, 51, 51, 1) 0%, rgba(255, 102, 102, 1) 100%); */
     background-color: #ff3737;
     border-radius: 22rpx 22rpx 22rpx 22rpx;
     color: rgba(255, 255, 255, 1);
     font-size: 26rpx;
     text-align: center;
     line-height: 44rpx;
     margin-top: 13rpx;
}

.Active {
     background: linear-gradient(86deg, rgba(254, 176, 2, 1) 0%, rgba(255, 191, 47, 1) 92%);
     width: 150rpx;
     height: 44rpx;
     /* background: linear-gradient(86deg, rgba(255, 51, 51, 1) 0%, rgba(255, 102, 102, 1) 100%); */
     border-radius: 22rpx 22rpx 22rpx 22rpx;
     color: rgba(255, 255, 255, 1);
     font-size: 26rpx;
     text-align: center;
     line-height: 44rpx;
     margin-top: 13rpx;
}

/* 通用券 */
.mangquan {
     background-image: url(http://img.hmeshop.cn/hmeshop_jxy/images/bg_manjian@2x.png);
     width: 141rpx;
     height: 80rpx;
     background-repeat: no-repeat;
     background-size: 100% 100%;
     display: flex;
     margin-top: 25rpx;
     padding: 10rpx 0;
     align-items: center;
}

.quanmoney {
     width: 70%;
     font-size: 36rpx;
     text-align: center;
     color: rgba(254, 254, 254, 1);
}

.quanmoney text {
     font-size: 20rpx;
}

.limit {
     width: 20%;
     font-size: 20rpx;
     padding-left: 5rpx;
     border-left: 1rpx solid white;
     color: rgba(254, 254, 254, 1);
}

.allprocess {
     color: rgba(153, 153, 153, 1);
     font-size: 20rpx;
}

.emity {
     text-align: center;
     font-size: 30rpx;
     margin-top: 50%;
}

.add_active {
     background-color: #feb208;
}