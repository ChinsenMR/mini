@import "../../../app.wxss";

.gift-bag-wrap {
	background-color: #fff;
}
.gift-bag-title {
	color: #333;
	border-bottom: 2rpx solid gainsboro;
}
.colect {
	padding: 22rpx;
	background: rgba(255, 255, 255, 1);
	box-sizing: border-box;
	margin-top: 19rpx;
}

.container {
	display: flex;
	border-bottom: 1px solid gainsboro;
	padding: 20rpx;
}

.container > image {
	width: 130rpx;
	height: 130rpx;
}

.content {
	padding-left: 16rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.name {
	width: 414rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.people {
	font-weight: 500;
	color: rgba(102, 102, 102, 1);
	font-size: 26rpx;
}

.redue {
	width: 260rpx;
	min-width: 194rpx;
	background: rgba(255, 204, 204, 1);
	color: rgba(255, 51, 51, 1);
	font-size: 24rpx;
	text-align: center;
	border-radius: 3rpx;
}

.price-box {
	display: flex;
	justify-content: space-between;
}

.price {
	font-size: 24rpx;
	color: var(--theme-red);
}
.emity {
	position: relative;
	font-size: 30rpx;
	text-align: center;
	top: 40%;
}
.count {
	color: #999;
}
.sku {
	padding: 3rpx 8rpx;
	font-size: 22rpx;
	color: var(--theme-red);
}
.sku-text{
	display: inline-block;
	background: rgba(255, 204, 204, 1);
}
