<view class='layout'>
  <view class='title2 df ais'>
    <text>{{goodsInfo.FightGroupActivityInfo.JoinNumber}}</text>
    人团，您可以直接参加，已拼 {{goodsInfo.FightGroupActivityInfo.FightGroupsOrderCount}} 件
  </view>
  <view class='user-ul' >
    <swiper vertical style="height:{{newGroup.length !=0?'220rpx':'70rpx'}}" autoplay circular interval="{{3000}}">
      <block wx:for="{{newGroup}}" wx:key="*this">
        <swiper-item>
          <block wx:for='{{item}}' wx:for-item='groupList' wx:for-index="groupIndex" wx:key="groupIndex">
            <view class='user-li df ais jct-between' wx:if="{{groupList.length !=0}}">
              <view class='user-liL df ais'>
                <!-- 团长头像 -->
                <view class='user-img userType'>
                  <image src='{{groupList.THeadPicture}}'></image>
                  <!-- <text>团长</text> -->
                </view>
                <view class='df fdc jct userName'>
                  <text class="infoName">{{groupList.THeadNickName}}</text>
                  <text
                    wx:if="{{groupList.limitHours =='00' && groupList.limitMin =='00' && groupList.limitSecond =='00' || groupList.LeftNum == 0}}">已结束</text>
                  <text wx:else>剩余 {{groupList.limitHours}}:{{groupList.limitMin}}:{{groupList.limitSecond}}</text>
                </view>
                <!-- 成员小头像 -->
                <block wx:for="{{groupList.FightGroupUsers}}" wx:key="index">
                  <view class='userGroup-img df ais'>
                    <image src='{{item.Picture}}' class="ceshi_img"></image>
                  </view>
                </block>
              </view>
          
              <view class='user-liR df ais'>
                <!-- 参团描述 -->
                <view class='groupNum'>
                  <view class='df ais'>还差
                    <text>{{groupList.LeftNum}}</text>人成团</view>
                  <view class='df ais'>拼团价
                    <text>￥ {{goodsInfo.FightGroupSkuInfos[0].SalePrice}}</text>
                  </view>
                </view>
                <!-- 参团按钮 -->
                <view
                  wx:if="{{groupList.limitHours =='00' && groupList.limitMin =='00' && groupList.limitSecond =='00' || groupList.LeftNum == 0}}"
                  class='df ais jct showGroup-btn' bindtap='joinOver'>
                  已结束 >
                </view>
                <view wx:else
                  class='df ais jct showGroup-btn {{goodsInfo.FightSetting.CanJoinCreateFight && goodsInfo.IsFightGroup?"":"active"}}'
                  data-id='{{groupList.FightGroupActivityId}}' data-isown='{{groupList.IsJoinGroup}}'
                  data-FightGroupId="{{groupList.FightGroupId}}" data-sku='{{groupList.SkuId}}' data-tuxedo='tuxedo'
                  data-dlUser="{{goodsInfo.FightDistributorInfo.UserId}}" bindtap='joinGroup'>
                  立即参团 >
                </view>
              </view>
            </view>
          </block>

        </swiper-item>
      </block>
    </swiper>
    <view class="no_data" wx:if="{{newGroup.length ==0}}">暂无团可以参加!</view>
  </view>

  

