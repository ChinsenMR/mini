.modal {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-inner {
  width: 492rpx;
  /* height: 420rpx; */
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  position: relative;
  padding-top: 50rpx;
  padding-bottom: 48rpx;
  box-sizing: border-box;
}

.modal-close {
  width: 35rpx;
  height: 35rpx;
  box-sizing: border-box;
  color: #666;
  border: 1rpx solid #666;
  border-radius: 50%;
  transform: rotate(45deg);
  font-size: 35rpx;
  padding-left: 4rpx;
  padding-bottom: 8rpx;
  right: 20rpx;
  top: 20rpx;
  position: absolute;
}

.moodal-info1,
.moodal-info2 {
  color: #666;
  font-size: 28rpx;
  text-align: center;
}

.moodal-info1 text,
.moodal-info2 text {
  color: #f44;
}

.moodal-info2 {
  margin-top: 10rpx;
}

.modal-user {
  margin-top: 30rpx;
}

.modal-user view {
  width: 86rpx;
  height: 86rpx;
  box-sizing: border-box;
  padding: 5rpx;
  border: 1rpx solid #f44;
  border-radius: 50%;
  margin-right: 44rpx;
}

.modal-user view:last-child {
  margin-right: 0;
}

.modal-user image {
  width: 66rpx;
}

.modal-btn {
  width: 330rpx;
  line-height: 88rpx;
  background: linear-gradient(#F2E127, #FFCA29);
  border-radius: 44rpx;
  color: #fff;
  text-align: center;
  margin-top: 34rpx;
}

/* 限时 */

.limit-time {
  margin-top: 20rpx;
}

.limit-time image {
  width: 164rpx;
}

.limit-time1 {
  padding: 0 27rpx;
  height: 88rpx;
  background: linear-gradient(#F2E127, #FFCA29);
  color: #333;
  font-size: 26rpx;
}

.limit-time1R>view:first-of-type {
  margin-right: 15rpx;
}

.limit-time1R>view:last-of-type text {
  width: 36rpx;
  line-height: 29rpx;
  text-align: center;
  background-color: #333;
  color: #fff;
  font-size: 19rpx;
}

.limit-time1R>view:last-of-type icon {
  color: #333;
  margin: 0 8rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.time_day{
  font-size: 24rpx;
  color:red;
  margin-right: 15rpx;
}

/* 新增团员展示 */
