  height: 90rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 10rpx 15rpx 10rpx 10rpx;
  border-radius: 55rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-right: 30rpx;
}

.limit-time>.add_members .add_left .add_img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;

}

.limit-time>.add_members .add_left text {
  font-size: 28rpx;
  color: red;
}

.limit-time>.add_members .add_right {
  display: flex;
  align-items: center;

}

.limit-time>.add_members .add_right .add_gd {
  width: 70rpx;
  height: 70rpx;
  background-color: #eff6ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.limit-time>.add_members .add_right .gd_img {
  width: 55rpx;
  height: 60rpx;
  transform: rotate(90deg);
}

.limit-time>.add_members .add_right .img_wrap {
  position: relative;
  margin-right: 20rpx;
}

.limit-time>.add_members .add_right .img_wrap .gd_img2 {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.limit-time>.add_members .add_right .img_wrap text {
  font-size: 20rpx;
  color: #fff;
  display: block;
  text-align: center;
  background-color: red;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  position: absolute;
  bottom: -17rpx;
  left: 1rpx;
}

.limit-time>.add_members .add_right .img_wrap2 .gd_img3 {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.limit-time>.add_members .add_right .img_wrap2 .no_img {
  font-size: 26rpx;
  color: #bbbbbb;
  width: 70rpx;
  height: 70rpx;
  background-color: #f5f8fd;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

/* 代理分享弹窗 */
.win_wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background-color: #fff;
  width: 480rpx;
  height: 530rpx;
  border-radius: 20rpx;
  z-index: 31;
  box-sizing: border-box;
  padding: 30rpx;
}

.win_wrap .dl_win {
  display: flex;
  align-items: center;
}

.win_wrap .dl_win .head_wrap .head_img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.win_wrap .dl_win .head_right {
  flex: 1;
  font-size: 30rpx;
  color: #000;
  font-weight: 600;
}

.win_wrap .dl_win .head_right .head_two {
  display: flex;
  align-items: center;
}

.win_wrap .dl_win .head_right .head_two text {
  font-size: 28rpx;
  color: #757575;
  font-weight: normal;
}

.win_wrap .dl_win .head_right .head_two .head_copy {
  font-size: 26rpx;
  color: red;
  display: block;
  padding: 2rpx 5rpx;
  border-radius: 5rpx;
  border: 1rpx solid red;
  width: 60rpx;
  text-align: center;
  margin-left: 10rpx;
}
.win_wrap .code_wrap{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}
.win_wrap .code_wrap .code_img{
  width: 360rpx;
  height: 360rpx;
}
.win_wrap .off_btn{
  width: 50rpx;
  height: 50rpx;
  font-size: 30rpx;
  color:#fff;
  border:1rpx solid #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 43%;
  bottom: -80rpx;
}

.ceshi_wrap{
  display: flex;
  flex-direction: column;
}
.active{
  background-color: #999;
}