.userName {
  margin-right: 10rpx
}

.userName text:first-child {
  color: #666;
  font-size: 24rpx;
  margin-bottom: 6rpx;
}

.userName text:last-child {
  color: #999;
  font-size: 20rpx;
}

.infoName {
  width: 120rpx;
  margin-right: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.groupNum {
  color: #666;
  font-size: 22rpx;
}

.user-liR .groupNum view:last-child {
  font-size: 20rpx;
}

.user-liR .groupNum text {
  color: #ff4141;
}

.user-liR .showGroup-btn {
  width: 166rpx;
  line-height: 44rpx;
  background-color: #f44;
  border-radius: 22rpx;
  color: #fff;
  font-size: 26rpx;
  margin-left: 15rpx;
}

.userGroup-img {
  position: relative;
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  box-sizing: border-box;
  margin-right: 10rpx;
}

.ceshi_img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

