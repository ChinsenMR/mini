  padding: 0 22rpx;
}

.search-l image{
  width: 25rpx;
  margin-right: 10rpx;
}

.search-l input{
  color: '#666';
  font-size: 26rpx;
}

.search-r{
  width: 90rpx;
  color: #333333;
  font-size: 28rpx;
  text-align: right;
}

.popular {
