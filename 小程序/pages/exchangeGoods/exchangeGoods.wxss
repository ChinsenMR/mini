.layout{
  background-color: #F5F5F5;
}

.scroll-header{
  line-height: 98rpx;
  background-color: #fff;
  border-top: 1rpx solid #F5F5F5;
  padding: 0 30rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.scroll-header view{
  display: inline-block;
  width: 160rpx;
  line-height: 46rpx;
  text-align: center;
  border: 1rpx solid var(--theme-red);
  border-radius: 23rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: var(--theme-red);
}

.scroll-header .activeItem{
  background-color: var(--theme-red);
  color: #fff;
}

.content{
  padding: 20rpx 30rpx;
}

.allSelect{
  background-color: #fff;
  height: 88rpx;
  border-radius: 6rpx;
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.content-ul{
  margin-bottom: 300rpx;
}

.allSelect icon, .content-li icon{
  font-size: 35rpx;
  color: var(--theme-red);
  margin: 0 30rpx;
}

.iconweixuanze{
  border: 2rpx solid #E5E5E5;
  border-radius: 50%;
  height: 35rpx;
  width: 35rpx;
}

.iconxuanze{
  width: 39rpx;
  height: 39rpx;
}

.content-li{
  background-color: #fff;
  border-bottom: 1rpx solid #E5E5E5;
  padding: 30rpx 30rpx 30rpx 0;
}

.content-li:last-child{
  border-bottom: 0;
}

.goodsImg{
  width: 128rpx;
  height: 128rpx;
  margin-right: 17rpx;
}

.goodsTitle{
  color: #333333;
  font-size: 26rpx;
  flex: 1
}

.goodsPrice{
  color: var(--theme-red);
  font-size: 28rpx;
}

.content{
  margin-bottom: 100rpx;
}

.content-liR{
  height: 120rpx;
}

.footer{
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 48rpx;
  border-radius: 49rpx;
  height:98rpx;
  background:linear-gradient(88deg,rgba(255,51,51,0.94),rgba(255,70,70,0.94));
}

.footer-l{
  font-size: 28rpx;
  color: #fff;
  padding-left: 50rpx;
}

.footer-r{
  width:210rpx;
  height:98rpx;
  background:linear-gradient(0deg,rgba(255,204,153,0.94),rgba(224,169,110,0.94));
  border-radius:49rpx;
  color: #fff;
  font-size: 28rpx;
}